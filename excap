        <script>
            // Functions to change image with mouse over and out
            function hover_find(element) {
                element.setAttribute('src', '/excap/img/ui_buttons_find_mini_hover.png');
            }
            function unhover_find(element) {
                element.setAttribute('src', '/excap/img/ui_buttons_find_mini.png');
